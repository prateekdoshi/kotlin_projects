<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/userId"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/clickme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/clickme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        app:layout_constraintBottom_toTopOf="@id/tx_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userId" />


    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello name!"
        app:layout_constraintBottom_toTopOf="@id/tx_map_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickme" />

    <TextView
        android:id="@+id/tx_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello map name!"
        app:layout_constraintBottom_toTopOf="@id/tx_switchmap_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_name" />

    <TextView
        android:id="@+id/tx_switchmap_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello switch name!"
        app:layout_constraintBottom_toTopOf="@id/tx_combined_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_map_name" />

    <TextView
        android:id="@+id/tx_combined_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello combined name"
        app:layout_constraintBottom_toTopOf="@id/tx_livedata_builder_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_switchmap_name" />

    <TextView
        android:id="@+id/tx_livedata_builder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello builder name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_combined_name" />

</androidx.constraintlayout.widget.ConstraintLayout>